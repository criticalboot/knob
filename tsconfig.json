{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["@types/jasmine"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "**/*-aot.ts",
    "typings/browser.d.ts",
    "typings/browser/"
  ],
  "compileOnSave": false,
  "filesGlob": [
    "public/*.ts",
    "public//*.ts"
  ]
}